{
    "include": [
        "./src",
        "./tests",
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "types": [
            "node"
        ],
        "moduleResolution": "node",
        "target": "ES6",
        "module": "commonjs",
        "lib": [
            "ES6",
            "esnext.asynciterable"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "removeComments": true,
        "esModuleInterop": true,
        "incremental": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "plugins": [
            {
                "name": "typescript-sql-tagged-template-plugin",
                "enableDiagnostics": false,
                "enableFormat": true
            }
        ],
        "paths": {
            "@root/*": [
                "./*"
            ],
            "@utils": [
                "src/utils"
            ],
            "@schemas": [
                "src/models/schemas"
            ],
            "@types": [
                "src/models/types"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@plugins/*": [
                "src/plugins/*"
            ],
            "@dependencies/*": [
                "src/plugins/dependencies/*"
            ],
            "@services/*": [
                "src/services/*"
            ]
        }
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}
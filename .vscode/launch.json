{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug server",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/",
            "remoteRoot": "/server",
            "restart": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ]
        }
    ]
}